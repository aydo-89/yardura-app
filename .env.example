# =============================================================================
# YARDURA ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local for development
# Use .env.production for production deployment
# NEVER commit actual secrets to version control

# =============================================================================
# DATABASE
# =============================================================================
# DEV: SQLite is fine for local development
# PROD: Use PostgreSQL (Supabase, Railway, PlanetScale, etc.)
DATABASE_URL="file:./dev.db"

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from https://dashboard.stripe.com/test/apikeys
# Use TEST keys for development, LIVE keys for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
# For development: http://localhost:3000
# For production: https://your-domain.com
NEXTAUTH_URL=http://localhost:3000

# Generate a secure random string: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here-32-chars-minimum

# =============================================================================
# EMAIL CONFIGURATION (Magic Links)
# =============================================================================
# Option 1: Gmail SMTP (requires app password)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-gmail-app-password
EMAIL_FROM="Yardura <noreply@yardura.com>"

# Option 2: Resend (recommended for production)
# RESEND_API_KEY=re_your_resend_api_key_here

# =============================================================================
# GOOGLE OAUTH (Optional but recommended)
# =============================================================================
# Get these from https://console.developers.google.com/
# Required for Google sign-in option
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# SUPABASE (Optional - for client-side features)
# =============================================================================
# Only needed if using Supabase for additional features
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Comma-separated list of admin email addresses
# These users will have admin access to /admin panel
ADMIN_EMAILS=admin@yardura.com,ops@yardura.com

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# 1. For Gmail SMTP: Use an app password, not your regular password
# 2. Generate NEXTAUTH_SECRET: openssl rand -base64 32
# 3. Stripe webhook endpoint: /api/stripe/webhook
# 4. Test Stripe webhooks locally: stripe listen --forward-to localhost:3000/api/stripe/webhook
# 5. Never commit .env.local - it contains real secrets

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry Error Tracking (recommended for production)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# ANALYTICS
# =============================================================================
# Google Analytics 4 (optional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Vercel Analytics (automatic if deployed on Vercel)
# No configuration needed - enabled automatically

# Custom Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and queues)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# PRODUCTION DATABASE
# =============================================================================
# Uncomment and configure for production PostgreSQL
# POSTGRES_DATABASE_URL=postgresql://username:password@host:5432/database
# SHADOW_DATABASE_URL=postgresql://username:password@host:5432/shadow_db

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Database migration flags
USE_POSTGRES=false
READ_POSTGRES=false
WRITE_POSTGRES=false
MIGRATION_MODE=false

# Feature flags
ENABLE_INSIGHTS=true
ENABLE_DEVICE_INTEGRATION=false
ENABLE_MULTI_TENANT=false

